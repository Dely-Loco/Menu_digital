// Debe incluir estos modelos (nombres en español como en tu código)
model Producto {
  id                      Int       @id @default(autoincrement())
  nombre                  String
  slug                    String    @unique
  descripcion             String
  descripcionCorta        String?
  especificacionesTecnicas String?
  precio                  Decimal   @db.Decimal(10,2)
  precioAnterior          Decimal?  @db.Decimal(10,2)
  marca                   String?
  stock                   Int       @default(0)
  rating                  Decimal?  @db.Decimal(3,2)
  numeroReviews           Int       @default(0)
  destacado               Boolean   @default(false)
  esNuevo                 Boolean   @default(false)
  masVendido              Boolean   @default(false)
  tags                    String[]
  caracteristicas         String[]
  colores                 String[]
  dimensiones             String?
  peso                    String?
  garantia                String?
  createdAt               DateTime  @default(now())
  
  // Relaciones
  categoriaId             Int?
  categoria               Categoria? @relation(fields: [categoriaId], references: [id])
  imagenes                Imagen[]
  
  @@map("productos")
}

model Categoria {
  id          Int       @id @default(autoincrement())
  nombre      String
  slug        String    @unique
  descripcion String?
  imagen      String?
  icono       String?
  color       String?
  esPopular   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  
  // Relaciones
  productos   Producto[]
  
  @@map("categorias")
}

model Imagen {
  id         Int      @id @default(autoincrement())
  url        String
  alt        String?
  orden      Int      @default(0)
  
  // Relaciones
  productoId Int?
  producto   Producto? @relation(fields: [productoId], references: [id])
  
  @@map("imagenes")
}